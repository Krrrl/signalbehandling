function p = sum_cosines(f1, fs, p1, p2, p3)

%default values if function is run with less than spesified arguments

if nargin == 0
    f1 = 1;
    fs = 512;
    Fs = 1/fs;
    t = 0:(Fs):(1-Fs);
    p1 = 5*cos(5*f1*t+pi);
    p2 = 3*cos(3*f1*t);
    p3 = 3*cos(50*f1*t + (pi/4));
    p = p1 + p2 + p3;
    plot(t, p), xlabel('t'), ylabel('p(t)'), title('Sum of three cosines');
elseif nargin == 1
    fs = 512;
    Fs = 1/fs;
    t = 0:(Fs):(1-Fs);
    p1 = 5*cos(5*f1*t+pi);
    p2 = 3*cos(3*f1*t);
    p3 = 3*cos(50*f1*t + (pi/4));
    p = p1 + p2 + p3;
    plot(t, p), xlabel('t'), ylabel('p(t)'), title('Sum of three cosines');
elseif nargin == 2
    Fs = 1/fs;
    t = 0:(Fs):(1-Fs);
    p1 = 5*cos(5*f1*t+pi);
    p2 = 3*cos(3*f1*t);
    p3 = 3*cos(50*f1*t + (pi/4));
    p = p1 + p2 + p3;
    plot(t, p), xlabel('t'), ylabel('p(t)'), title('Sum of three cosines');
elseif nargin == 3
    Fs = 1/fs;
    t = 0:(Fs):(1-Fs);
    p2 = 3*cos(3*f1*t);
    p3 = 3*cos(50*f1*t + (pi/4));
    p = str2func(p1) + p2 + p3;
    plot(t, p), xlabel('t'), ylabel('p(t)'), title('Sum of three cosines');
elseif nargin == 4
    Fs = 1/fs;
    t = 0:(Fs):(1-Fs);
    p3 = 3*cos(50*f1*t + (pi/4));
    p = str2func(p1) + str2func(p2) + p3;
    plot(t, p), xlabel('t'), ylabel('p(t)'), title('Sum of three cosines');
elseif nargin == 5
    Fs = 1/fs;
    t = 0:(Fs):(1-Fs);
    p = str2func(p1) + str2func(p2) + str2func(p3);
end

