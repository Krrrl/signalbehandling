%Task 1a and 1b

load('ecgdata.dat','-mat');

[x1,y1] = sumcos(rectkoeff, 6, 512, 1);

xlabel('t');
ylabel('amplitude');
title('Comparison of synthesized signals');
plot(x1, y1);
hold on;

[x2,y2] = sumcos(rectkoeff, 15, 512, 1);

xlabel('t');
ylabel('amplitude');
title('Comparison of synthesized signals');
plot(x2, y2);
hold on;

[x3,y3] = sumcos(rectkoeff, 100, 512, 1);

xlabel('t');
ylabel('amplitude');
title('Comparison of synthesized signals');
plot(x3, y3);
hold off;

